{
  "type": "Slider",
  "description": "A widget representing a numeric value as an movable indicator on a horizontal line.",
  "extends": "Widget",
  "properties": {
    "minimum": {
      "type": "number",
      "default": "0",
      "description": "The minimum value."
    },
    "maximum": {
      "type": "number",
      "default": "100",
      "description": "The maximum value."
    },
    "selection": {
      "type": "number",
      "default": "0",
      "description": "The actual value."
    }
  },
  "events": {
    "change:selection": {
      "description": "Fired when the selection property changes.",
      "parameters": {
        "value": {
          "description": "The new value of the `selection` property.",
          "type": "number"
        }
      }
    },
    "select": {
      "description": "Fired when the selection property is changed by the user.",
      "parameters": {
        "selection": {
          "description": "The new value of *[selection](#selection)*.",
          "type": "number"
        }
      }
    }
  },
  "links": [
    {
      "title": "Simple Slider snippet",
      "path": "${GITHUB_BRANCH}/snippets/slider.js"
    }
  ]
}
